<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="80.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.prt.guitarlearningapplication.view.BottomNoteButtonsViewController">
	<items>
		<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="40.0" prefWidth="160.0">
			<children>
				<ButtonBar buttonMinWidth="20.0" layoutX="62.0" layoutY="98.0" pickOnBounds="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<buttons>
						<RadioButton minWidth="0.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="19.0" text="C" userData="C">
							<toggleGroup>
								<ToggleGroup fx:id="Notes" />
							</toggleGroup>
						</RadioButton>
						<RadioButton mnemonicParsing="false" text="D" toggleGroup="$Notes" userData="D" />
						<RadioButton mnemonicParsing="false" text="E" toggleGroup="$Notes" userData="E" />
						<RadioButton mnemonicParsing="false" text="F" toggleGroup="$Notes" userData="F" />
						<RadioButton mnemonicParsing="false" text="G" toggleGroup="$Notes" userData="G" />
						<RadioButton mnemonicParsing="false" text="A" toggleGroup="$Notes" userData="A" />
						<RadioButton mnemonicParsing="false" text="B" toggleGroup="$Notes" userData="B">
							<padding>
								<Insets right="15.0" />
							</padding>
						</RadioButton>
					</buttons>
				</ButtonBar>
				<Button fx:id="btnMakeChord" minWidth="100.0" mnemonicParsing="false" onAction="#createMyChordButtonAction" text="Make My Chord!" textAlignment="CENTER" AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="5.0" />
			</children>
		</AnchorPane>
		<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="80.0" prefWidth="160.0">
			<children>
				<ButtonBar buttonMinWidth="20.0" layoutX="199.0" layoutY="47.0" prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<buttons>
						<RadioButton mnemonicParsing="false" text="Major" userData="MAJOR">
							<toggleGroup>
								<ToggleGroup fx:id="ChordTypes" />
							</toggleGroup>
						</RadioButton>
						<RadioButton mnemonicParsing="false" text="Minor" toggleGroup="$ChordTypes" userData="MINOR" />
						<RadioButton mnemonicParsing="false" text="Augmented" toggleGroup="$ChordTypes" userData="AUGMENTED" />
						<RadioButton mnemonicParsing="false" text="Diminished" toggleGroup="$ChordTypes" userData="DIMINISHED" />
					</buttons>
				</ButtonBar>
            <Button fx:id="btnSaveChord" minWidth="100.0" mnemonicParsing="false" onAction="#saveChordButtonAction" text="Save this Chord!" textAlignment="CENTER" AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="5.0" />
			</children>
		</AnchorPane>
	</items>
</SplitPane>
